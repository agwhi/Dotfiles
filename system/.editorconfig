root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 4

[*.json]
indent_size = 4

[*.{sh,bash,zsh,nu}]
indent_size = 4

[*.{lua,toml}]
indent_size = 4

[*.{js,ts,jsx,tsx}]
indent_size = 4

[*.{cs,csproj}]
indent_size = 4